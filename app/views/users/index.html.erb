<p id="notice"><%= notice %></p>

<h1>Users</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Desc</th>
      <th>Link</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.desc %></td>
        <td><%= user.link %></td>
        <td><%= link_to 'Show', user_path(user), :class => "btn btn-primary" %></td>
        <td><%= link_to 'Edit', edit_user_path(user), :class => "btn btn-warning" %></td>
        <td><%= link_to 'Delete', user, method: :delete, data: {confirm: 'Are you sure?'}, :class => "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Add User', new_user_path, :class => "btn btn-success" %>
