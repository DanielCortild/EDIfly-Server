<p id="notice"><%= notice %></p>

<h1>Team Members</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Role</th>
      <th>Desc</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @teams.each do |team| %>
      <tr>
        <td><%= team.name %></td>
        <td><%= team.role %></td>
        <td><%= team.desc %></td>
        <td><%= link_to 'Show', team, :class => "btn btn-primary" %></td>
        <td><%= link_to 'Edit', edit_team_path(team), :class => "btn btn-warning" %></td>
        <td><%= link_to 'Delete', team, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Add Member', new_team_path, :class => "btn btn-success" %>
