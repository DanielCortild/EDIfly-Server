<h2>
  Product Briefings<%= " " %>
  <%= link_to 'New Product Briefing', new_product_briefing_path, :class => "btn btn-success" %>
</h2>

<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Filename</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @product_briefings.each do |product_briefing| %>
      <tr>
        <td><%= product_briefing.title %></td>
        <td><%= product_briefing.filename %></td>
        <td><%= link_to 'Show', product_briefing, :class => "btn btn-primary" %></td>
        <td><%= link_to 'Edit', edit_product_briefing_path(product_briefing), :class => "btn btn-warning" %></td>
        <td><%= link_to 'Destroy', product_briefing, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>