<p>
  <strong>Name:</strong>
  <%= @product_briefing.title %>
</p>

<p>
  <strong>Filename:</strong>
  <%= @product_briefing.filename %>
</p>

<% if @product_briefing.file.attached? %>
  <a href="<%= url_for(@product_briefing.file) %>" class="btn btn-info" target="_blank">Open File</a> 
<% end %>
<br /> <br />

<div class="actions text-center">
  <%= link_to 'Edit', edit_product_briefing_path(@product_briefing), :class => "btn btn-primary" %>
  <%= link_to 'Back', downloads_path, :class => "btn btn-secondary" %>
</div>