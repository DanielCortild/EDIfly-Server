<h1>Testimonials</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>From</th>
      <th>Testimonial</th>
      <th>Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @testimonials.each do |testimonial| %>
      <tr>
        <td><%= testimonial.name %></td>
        <td><%= testimonial.from %></td>
        <td><%= testimonial.testimonial %></td>
        <td><%= testimonial.date %></td>
        <td><%= link_to 'Show', testimonial, :class => "btn btn-primary" %></td>
        <td><%= link_to 'Edit', edit_testimonial_path(testimonial), :class => "btn btn-warning" %></td>
        <td><%= link_to 'Destroy', testimonial, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Testimonial', new_testimonial_path, :class => "btn btn-success" %>
