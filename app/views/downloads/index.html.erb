<h1>Downloadable Files</h1>

<h2>
  Whitepapers<%= " " %>
  <%= link_to 'New Whitepaper', new_whitepaper_path, :class => "btn btn-success" %>
</h2>

<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Filename</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @whitepapers.each do |whitepaper| %>
      <tr>
        <td><%= whitepaper.title %></td>
        <td><%= whitepaper.filename %></td>
        <td><%= link_to 'Show', whitepaper, :class => "btn btn-primary" %></td>
        <td><%= link_to 'Edit', edit_whitepaper_path(whitepaper), :class => "btn btn-warning" %></td>
        <td><%= link_to 'Destroy', whitepaper, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

